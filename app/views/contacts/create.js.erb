function refreshForm(innerHTML) {
  const contactForm = document.getElementById('contact-form');
  contactForm.innerHTML = innerHTML;
}

function refreshAlert(innerHTML) {
	const alertArea = document.getElementById('alert-area');
	alertArea.innerHTML = innerHTML;
}

<% if @contact.errors.any? %>
  refreshForm('<%= j render "contacts/mail_form", contact: @contact %>');
  refreshAlert('<%= j render "shared/flashes" %>');
<% else %>
  refreshForm('<%= j render "contacts/mail_form", contact: Contact.new %>');
  refreshAlert('<%= j render "shared/flashes" %>');
<% end %>

